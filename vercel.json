{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["gru1"],
  "git": {
    "deploymentEnabled": true
  },
  "crons": [
    {
      "path": "/api/blog/cron",
      "schedule": "0 13 * * 2,4,6"
    },
    {
      "path": "/api/instagram/generate-batch",
      "schedule": "0 13 * * 2,4,6"
    },
    {
      "path": "/api/instagram/publish-scheduled",
      "schedule": "0 13 * * 1,3,5,0"
    },
    {
      "path": "/api/campaign/mega-automation",
      "schedule": "0 15 * * 1,4"
    }
  ]
}
