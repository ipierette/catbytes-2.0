{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "regions": ["gru1"],
  "git": {
    "deploymentEnabled": true
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow"
        }
      ]
    },
    {
      "source": "/admin/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/simple-cron",
      "schedule": "0 16 * * 2,4,6,0",
      "description": "Geração de blog (Ter/Qui/Sáb/Dom) + newsletter + posts às 13h BRT"
    },
    {
      "path": "/api/cron/check-instagram-token",
      "schedule": "0 12 * * *",
      "description": "Verificar token do Instagram (9h BRT)"
    }
  ]
}
