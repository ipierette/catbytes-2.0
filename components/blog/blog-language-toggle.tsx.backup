'use client'

import { useLocale } from 'next-intl'
import { useRouter } from '@/i18n/routing'
import { motion } from 'framer-motion'
import { AlertCircle } from 'lucide-react'
import { useTransition, useState, useEffect, useCallback } from 'react'
import { usePathname } from 'next/navigation'

const languages = [
  { code: 'pt-BR', label: 'PT', flag: 'ðŸ‡§ðŸ‡·' },
  { code: 'en-US', label: 'EN', flag: 'ðŸ‡ºðŸ‡¸' },
]

interface BlogLanguageToggleProps {
  currentSlug?: string
}

interface TranslationResponse {
  exists: boolean
  slug?: string
  locale: string
  isSame?: boolean
}

export function BlogLanguageToggle({ currentSlug }: BlogLanguageToggleProps) {
  const locale = useLocale()
  const router = useRouter()
  const pathname = usePathname()
  const [isPending, startTransition] = useTransition()
  const [translationStatus, setTranslationStatus] = useState<Record<string, TranslationResponse>>({})
  const [showNoTranslationMessage, setShowNoTranslationMessage] = useState<string | null>(null)

  const isBlogListingPage = pathname.endsWith('/blog')
  const isIndividualPostPage = !!currentSlug && !isBlogListingPage

  // Memoized function to check translations
  const checkTranslations = useCallback(async () => {
    if (!isIndividualPostPage || !currentSlug) return

    const newStatus: Record<string, TranslationResponse> = {}
    
    try {
      // Check both directions at once for efficiency
      const promises = languages
        .filter(lang => lang.code !== locale)
        .map(async (lang) => {
          const apiUrl = `/api/blog/posts/${currentSlug}/translation?currentLocale=${locale}&targetLocale=${lang.code}`
          const response = await fetch(apiUrl)
          if (response.ok) {
            const data = await response.json()
            newStatus[lang.code] = data
          } else {
            newStatus[lang.code] = { exists: false, locale: lang.code }
          }
        })

      await Promise.all(promises)
      setTranslationStatus(newStatus)
    } catch (error) {
      // Silent error handling for better UX
      languages.forEach(lang => {
        if (lang.code !== locale) {
          newStatus[lang.code] = { exists: false, locale: lang.code }
        }
      })
      setTranslationStatus(newStatus)
    }
  }, [currentSlug, locale, isIndividualPostPage])

  useEffect(() => {
    if (isIndividualPostPage) {
      checkTranslations()
    } else {
      setTranslationStatus({})
    }
  }, [checkTranslations, isIndividualPostPage])

  const switchLanguage = useCallback((targetLocale: string) => {
    if (targetLocale === locale || isPending) return
    
    // Hide any existing messages immediately  
    setShowNoTranslationMessage(null)
    
    if (isBlogListingPage) {
      // Fast navigation for blog listing
      startTransition(() => {
        router.replace(`/blog`, { locale: targetLocale })
      })
      return
    }

    if (isIndividualPostPage) {
      const translationInfo = translationStatus[targetLocale]
      
      if (translationInfo?.exists && translationInfo.slug) {
        // Fast navigation to translated post
        startTransition(() => {
          router.push(`/blog/${translationInfo.slug}`, { locale: targetLocale })
        })
      } else if (translationInfo && !translationInfo.exists) {
        // Show no translation message briefly
        const languageName = targetLocale === 'en-US' ? 'English' : 'PortuguÃªs'
        setShowNoTranslationMessage(languageName)
        setTimeout(() => setShowNoTranslationMessage(null), 2000)
      } else {
        // Fallback: try direct navigation
        startTransition(() => {
          router.push(`/blog/${currentSlug}`, { locale: targetLocale })
        })
      }
    }
  }, [locale, isPending, isBlogListingPage, isIndividualPostPage, translationStatus, router, currentSlug])

  const getButtonStatus = useCallback((langCode: string) => {
    if (langCode === locale) return 'current'
    if (isBlogListingPage) return 'available'
    
    const translation = translationStatus[langCode]
    if (!translation) return 'loading'
    return translation.exists ? 'available' : 'unavailable'
  }, [locale, isBlogListingPage, translationStatus])

  const getButtonTooltip = useCallback((langCode: string) => {
    const status = getButtonStatus(langCode)
    const languageName = langCode === 'en-US' ? 'English' : 'PortuguÃªs'
    
    switch (status) {
      case 'current':
        return `Current language: ${languageName}`
      case 'loading':
        return `Switch to ${languageName}`
      case 'available':
        return `Switch to ${languageName}`
      case 'unavailable':
        return `${languageName} translation not available`
      default:
        return languageName
    }
  }, [getButtonStatus, isIndividualPostPage, isBlogListingPage])

  return (
    <div className="relative">
      {/* No Translation Message */}
      {showNoTranslationMessage && (
        <motion.div
          initial={{ opacity: 0, y: -10 }}
          animate={{ opacity: 1, y: 0 }}
          exit={{ opacity: 0, y: -10 }}
          className="absolute -top-16 left-1/2 transform -translate-x-1/2 z-50"
        >
          <div className="bg-amber-100 dark:bg-amber-900/30 border border-amber-200 dark:border-amber-700 text-amber-800 dark:text-amber-200 px-4 py-2 rounded-lg shadow-lg flex items-center gap-2 whitespace-nowrap">
            <AlertCircle className="w-4 h-4" />
            <span className="text-sm font-medium">
              No {showNoTranslationMessage} version available
            </span>
          </div>
        </motion.div>
      )}

      {/* Language Toggle */}
      <div className="flex items-center gap-2 bg-gray-100 dark:bg-gray-800 rounded-full p-1">
        {languages.map((lang) => {
          const status = getButtonStatus(lang.code)
          const isDisabled = (status === 'unavailable' && isIndividualPostPage) || isPending || (status === 'loading' && isIndividualPostPage)
          
          return (
            <motion.button
              key={lang.code}
              onClick={() => switchLanguage(lang.code)}
              disabled={isDisabled || locale === lang.code}
              title={getButtonTooltip(lang.code)}
              whileHover={{ 
                scale: (locale === lang.code || isDisabled) ? 1 : 1.05,
                transition: { duration: 0.15 }
              }}
              whileTap={{ 
                scale: (locale === lang.code || isDisabled) ? 1 : 0.95,
                transition: { duration: 0.1 }
              }}
              className={`relative px-4 py-2 rounded-full font-medium transition-all duration-200 ${
                locale === lang.code
                  ? 'text-white'
                  : status === 'available'
                  ? 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white'
                  : status === 'unavailable'
                  ? 'text-gray-400 dark:text-gray-600 cursor-not-allowed opacity-50'
                  : status === 'loading'
                  ? 'text-gray-500 dark:text-gray-500 cursor-wait opacity-75'
                  : 'text-gray-600 dark:text-gray-400'
              } ${isPending ? 'opacity-50 cursor-wait' : ''}`}
            >
              {locale === lang.code && (
                <motion.div
                  layoutId="active-language-blog"
                  className="absolute inset-0 bg-catbytes-purple rounded-full"
                  transition={{ type: 'spring', stiffness: 400, damping: 30 }}
                />
              )}
              <span className="relative z-10 flex items-center gap-1">
                <span>{lang.flag}</span>
                <span>{lang.label}</span>
                {status === 'loading' && isIndividualPostPage && (
                  <span className="w-3 h-3 border border-gray-400 border-t-transparent rounded-full ml-1 animate-spin"></span>
                )}
                {status === 'unavailable' && isIndividualPostPage && (
                  <span className="w-3 h-3 flex items-center justify-center ml-1">
                    <span className="w-1 h-1 bg-gray-400 rounded-full"></span>
                  </span>
                )}
              </span>
            </motion.button>
          );
        })}
      </div>
    </div>
  )
}