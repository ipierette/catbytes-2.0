# OpenAI API
OPENAI_API_KEY=sk-proj-your-key-here

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here

# Instagram Graph API
INSTAGRAM_ACCESS_TOKEN=your-instagram-long-lived-token
INSTAGRAM_ACCOUNT_ID=your-instagram-business-account-id

# Instagram Image Storage (opcional)
# true = Salva imagens permanentemente no Supabase (para histórico visual no dashboard)
# false ou não definido = Usa URL temporária do DALL-E (~2h, suficiente para Instagram baixar)
SAVE_IMAGES_TO_STORAGE=false

# Admin Authentication
ADMIN_PASSWORD=your-admin-password
JWT_SECRET=your-jwt-secret-min-32-chars

# Cron Authentication
CRON_SECRET=your-cron-secret-for-vercel

# Blog Auto-generation (optional)
SUPABASE_BLOG_USER_ID=your-blog-user-uuid
